<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstone.redflow">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".RedFlow"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home"/>
        <activity android:name=".register" android:parentActivityName=".LoginActivity"/>
        <activity android:name=".request" android:parentActivityName=".home"/>
        <activity android:name=".profile" android:parentActivityName=".home"/>
        <activity android:name=".beadonor" android:parentActivityName=".home"/>
        <activity android:name=".notification" android:parentActivityName=".home"/>
        <activity android:name=".history" android:parentActivityName=".home"/>
        <activity android:name=".admin.admin_home" />
        <activity android:name=".admin.search_user" android:parentActivityName=".admin.admin_home"/>
        <activity android:name=".admin.search_result"  android:parentActivityName=".admin.search_user"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".redcross_location"
            android:label="@string/title_activity_redcross_location"></activity>
    </application>

</manifest>