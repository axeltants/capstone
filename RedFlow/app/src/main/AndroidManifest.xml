<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstone.redflow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RedFlow"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home" />
        <activity android:name=".register" />
        <activity android:name=".request" />
        <activity android:name=".profile" />
        <activity android:name=".beadonor" />
        <activity android:name=".notification" />
        <activity android:name=".history" />
        <activity android:name=".admin.admin_home" />
        <activity android:name=".admin.search_user" />
        <activity android:name=".admin.search_result"></activity>
    </application>

</manifest>