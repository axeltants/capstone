<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.capstone.redflow.user_activities.history">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/blooddonation_history_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Blood Donation"
            android:textColor="@color/colorAccent2"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blooddonation_history_label"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/blooddonate_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="last donation: "

                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_blooddonate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/blooddonate_date_label"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/blooddonate_date_label"
                android:text="february 2 2016"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/Button_blooddonation_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_marginTop="15dp"
            android:background="@color/colorAccent2"
            android:onClick="blooddonation_list"
            android:text="Show your Blood donation history"
            android:textAllCaps="false"
            android:textColor="@color/logincolor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Button_blooddonation_history"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bloodclaim_history_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Claiming of blood"
                android:textColor="@color/colorAccent2"
                android:textSize="26sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bloodclaim_history_label"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/bloodclaim_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last claim of blood: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textview_bloodclaim_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bloodclaim_date_label"
                    android:text="March 28 2016"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <Button
                android:id="@+id/Button_bloodclaim_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/b2"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent2"
                android:onClick="bloodclaim_list"
                android:text="Show your Blood claim history"
                android:textAllCaps="false"
                android:textColor="@color/logincolor" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
