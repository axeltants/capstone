<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zero_supply_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zero_supply_request"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good Day!"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We're sorry to inform you, that currently we don't have available supply of blood type:"/>

            <TextView
                android:id="@+id/btype"
                android:textColor="@color/colorAccent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O+"
                android:textStyle="bold"
                android:textSize="52sp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="But don't lose hope, the system will notify you, via SMS, if there are any available blood supply. And we will also notify and encourage users with matching blood type to donate."/>

            <TextView
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are hoping for your kindness and consideration, Thank you."/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
